<div class="container">
  <header>
    <h1>Create New Campaign</h1>
    <p>Set up a new email collection campaign</p>
  </header>

  <section class="form-section">
    <div class="form-card">
      <.form :let={f} for={@changeset} action={~p"/campaigns"} method="post">
        <.input
          field={f[:name]}
          type="text"
          label="Campaign Name"
          placeholder="Enter campaign name"
          required
        />

        <div class="mt-2 flex items-center justify-between gap-6">
          <.button type="submit">Create Campaign</.button>
          <a href={~p"/profile"} class="btn btn-secondary">Cancel</a>
        </div>
      </.form>
    </div>
  </section>
</div>
